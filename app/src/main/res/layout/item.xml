<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="40sp"
    android:paddingRight="40sp"
    android:paddingTop="20sp"
    android:paddingBottom="20sp"
    android:outlineProvider="bounds"
    android:clipToPadding="false"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="981dp"
        android:layout_gravity="center"
        android:elevation="2dp"
        app:cardCornerRadius="4dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="461dp"
            android:layout_height="277dp"
            android:layout_gravity="center"
            android:text="Não foi encontrado nenhum usuario, tente novamente mais tarde!"
            android:textAlignment="center"
            android:textSize="48sp" />

        <FrameLayout
            android:layout_width="532dp"
            android:layout_height="813dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:gravity="center"
                android:paddingTop="720dp"
                android:textColor="@color/black"
                android:textColorHighlight="@android:color/black"
                android:textSize="40sp"
                android:textStyle="bold"
                tools:text="Mundo achar você uma florzinha" />

            <TextView
                android:id="@+id/cidade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="90dp"
                android:paddingHorizontal="90sp"
                android:textSize="34sp"
                android:textStyle="bold"
                tools:text="Cidade" />

            <TextView
                android:id="@+id/idade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="30dp"
                android:paddingHorizontal="90sp"
                android:textSize="48sp"
                tools:text="20" />

            <View
                android:id="@+id/item_swipe_left_indicator"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="20dp"
                android:alpha="0"
                android:background="#A5F" />

            <View
                android:id="@+id/item_swipe_right_indicator"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="right"
                android:layout_margin="10dp"
                android:alpha="0"
                android:background="#5AF" />

        </FrameLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>